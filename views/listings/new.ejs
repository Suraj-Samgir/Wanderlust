<% layout("/layouts/boilerplate") %>

    <body>

        <div class="row">
            <div class="col-8 offset-2">
                <br>
                <h3>Add New Listing</h3><br>
                <form action="/listings" method="POST" class="new-edit-listing-form needs-validation" novalidate enctype="multipart/form-data">
                    <div class="mb-3">
                        <label for="title" class="form-label">Title</label>
                        <input type="text" id="title" name="listing[title]" placeholder="Enter Title" autocomplete="off"
                            class="form-control" required>

                        <div class="valid-feedback">Title looks good</div>
                        <div class="invalid-feedback">Please add Title</div>

                    </div>

                    <div class="mb-3">
                        <label for="description" class="form-label">Description</label>
                        <textarea name="listing[description]" id="description" placeholder="Enter Description" autocomplete="off"
                            class="form-control" required></textarea>
                        <div class="valid-feedback">Description looks good</div>
                        <div class="invalid-feedback">Please add Description</div>

                    </div>

                    <div class="row">
                        <div class="mb-3 col-md-4">
                            <label for="image-name" class="form-label">Image Name</label>
                            <input type="text" id="image-name" name="listing[imageName]" placeholder="Enter Image Name"
                                autocomplete="off" class="form-control" required>
                        <div class="valid-feedback">Image Name looks good</div>
                        <div class="invalid-feedback">Please add Image Name</div>

                        </div>


                        <div class="mb-3 col-md-4">
                            <label for="image-file" class="form-label">Upload Image</label>
                            <input type="file" id="image-file" name="listing[image]" class="form-control" required>
                        <div class="valid-feedback">Image File Uploaded</div>
                        <div class="invalid-feedback">Please upload Image File</div>

                        </div>

                        
                    </div>

                    <div class="row">
                        <div class="mb-3 col-md-4">
                            <label for="price" class="form-label">Price</label>
                            <input type="number" id="price" name="listing[price]" placeholder="Enter Price" autocomplete="off"
                                class="form-control" required>

                        <div class="valid-feedback">Price looks good</div>
                        <div class="invalid-feedback">Please mention the Price</div>
                        
                        </div>

                        <div class="mb-3 col-md-8">
                            <label for="country" class="form-label">Country</label>
                            <input type="text" id="country" name="listing[country]" placeholder="Enter Country" autocomplete="off"
                                class="form-control" required>

                        <div class="valid-feedback">Country looks good</div>
                        <div class="invalid-feedback">Please mention the Country</div>
                        
                        </div>
                    </div>



                    <div class="mb-3">
                        <label for="location" class="form-label">Location</label>
                        <input type="text" id="location" name="listing[location]" placeholder="Enter Location" autocomplete="off"
                            class="form-control" required>

                        <div class="valid-feedback">Location looks good</div>
                        <div class="invalid-feedback">Please mention the Location</div>

                    </div>



                    <Button type="submit" class="btn btn-dark add-btn">Add Listing</Button>
                    <br><br>
                </form>
            </div>
        </div>
    </body>