<% layout("/layouts/boilerplate") %>

<div class="row mt-3">
    <h1 class="col-6 offset-3 mb-3">SignUp on WanderLust</h1>
    <div class="col-6 offset-3">
        <form action="/users/signup" method="POST" class="needs-validation" novalidate>
            <div class="mb-3">
                <label for="username" class="form-label">Username</label>
                <input type="text" id="username" name="username" placeholder="Enter Username" autocomplete="off"
                    class="form-control" required>

                <div class="valid-feedback">Looks good</div>
                <div class="invalid-feedback">Please write Username</div>
            </div>
            <div class="mb-3">
                <label for="email" class="form-label">Email</label>
                <input type="email" id="email" name="email" placeholder="Enter Email" autocomplete="off"
                    class="form-control" required>

                <!-- <div class="valid-feedback">Looks good</div>
                <div class="invalid-feedback">Please provide Email</div> -->
            </div>
            <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                <input type="password" id="password" name="password" placeholder="Enter Password" autocomplete="off"
                    class="form-control" required>

                <div class="valid-feedback">Looks good</div>
                <div class="invalid-feedback">Please write Username</div>
            </div>

            <button class="btn btn-success">SignUp</button>
        </form>
    </div>  
</div>